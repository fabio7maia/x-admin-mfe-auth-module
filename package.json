{
	"name": "x-admin-mfe-auth-module",
	"description": "X Admin Auth module using micro frontend",
	"version": "0.1.0",
	"files": [
		"/dist"
	],
	"scripts": {
		"prestart": "rimraf .webpack-federation-modules-types && npm run make-federated-types",
		"start": "webpack-cli serve",
		"build": "cross-env NODE_ENV=production webpack --mode production",
		"serve": "serve dist -p 3001",
		"test": "jest",
		"clean": "rm -rf dist",
		"dev-build": "tsc --noEmit",
		"make-federated-types": "node scripts/make-federated-types.js --outputDir ./.webpack-federation-modules-types/",
		"lint": "eslint src/**/*.{ts,tsx}",
		"lint-errors": "eslint --quiet src/**/*.{ts,tsx}",
		"lint-dir": "eslint --",
		"lint-fix": "eslint --fix src/**/*.{ts,tsx}",
		"lint:css": "stylelint ./src/**/*.{ts,tsx}",
		"prettier-format-all": "prettier --write src/**/*.{json,ts,tsx}",
		"spell-check": "cspell src/**/*.{ts,tsx}",
		"pre-commit": "npm run lint-errors && npm run spell-check && npm run lint:css",
		"pre-push": "npm run test-coverage",
		"test-coverage": "npm run test \"--coverage\" \"--watchAll=false\"",
		"prepare": "husky install"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"babel": {
		"presets": [
			"react-app"
		]
	},
	"dependencies": {
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-router-dom": "^6.4.1"
	},
	"devDependencies": {
		"@babel/core": "7.19.1",
		"@babel/preset-react": "7.18.6",
		"@babel/preset-typescript": "7.18.6",
		"@pixability-ui/federated-types": "^0.2.0",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^13.4.0",
		"@testing-library/user-event": "^14.4.3",
		"@types/jest": "^29.0.3",
		"@types/node": "^18.7.20",
		"@types/react": "^18.0.21",
		"@types/react-dom": "^18.0.6",
		"@typescript-eslint/eslint-plugin": "^5.38.0",
		"@typescript-eslint/parser": "^5.38.0",
		"babel-preset-react-app": "^10.0.1",
		"bundle-loader": "0.5.6",
		"copy-webpack-plugin": "^11.0.0",
		"cross-env": "^7.0.3",
		"cspell": "^6.10.1",
		"cspell-dict-en_us": "^1.3.7",
		"cspell-dict-en-gb": "^1.2.6",
		"cspell-dict-lorem-ipsum": "^1.1.2",
		"dotenv": "^16.0.2",
		"eslint": "^8.24.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-config-react-app": "^7.0.1",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-jsx-a11y": "^6.6.1",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.31.8",
		"eslint-plugin-react-hooks": "^4.6.0",
		"eslint-plugin-sonarjs": "^0.15.0",
		"filemanager-webpack-plugin": "^7.0.0",
		"fork-ts-checker-webpack-plugin": "^7.2.13",
		"html-webpack-plugin": "5.5.0",
		"husky": "^8.0.1",
		"jest": "29.0.3",
		"jest-canvas-mock": "^2.4.0",
		"jest-environment-jsdom-fourteen": "1.0.1",
		"jest-sonar-reporter": "^2.0.0",
		"jest-watch-typeahead": "2.2.0",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
		"react-app-polyfill": "^3.0.0",
		"react-scripts": "^5.0.1",
		"redux-devtools-extension": "^2.13.9",
		"rimraf": "^3.0.2",
		"serve": "14.0.1",
		"stylelint": "^14.12.1",
		"stylelint-config-recommended": "^9.0.0",
		"stylelint-config-styled-components": "^0.1.1",
		"stylelint-processor-styled-components": "^1.10.0",
		"ts-loader": "^9.4.1",
		"tsconfig-paths-webpack-plugin": "^4.0.0",
		"typescript": "^4.8.3",
		"webpack": "5.74.0",
		"webpack-cli": "4.10.0",
		"webpack-dev-server": "4.11.1",
		"webpack5-remote-types-plugin": "^0.1.2"
	},
	"lint-staged": {
		"src/**/*.{js,jsx,ts,tsx}": [
			"eslint --quiet"
		],
		"src/**/*.{css,scss,js,jsx,ts,tsx}": [
			"cspell",
			"stylelint"
		]
	}
}
